<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.github.rkhusainov.simpledraw.DrawView
        android:id="@+id/draw_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_color_black"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/colorBlack" />

        <Button
            android:id="@+id/btn_color_red"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/colorRed" />

        <Button
            android:id="@+id/btn_color_green"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/colorGreen" />

        <Button
            android:id="@+id/btn_color_blue"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/colorBlue" />

        <Button
            android:id="@+id/btn_color_yellow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/colorYellow" />

        <Button
            android:id="@+id/btn_color_orange"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/colorOrange" />

        <Button
            android:id="@+id/btn_color_pink"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/colorPink" />

        <Button
            android:id="@+id/btn_color_magenta"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/colorMagenta" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_curve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/curve" />

        <Button
            android:id="@+id/btn_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/line" />

        <Button
            android:id="@+id/btn_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/box" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="clear"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"/>

</LinearLayout>